    {{#if currentUser}}
    <div class="row photoRows">
        <h4>Welcome {{user.username}},</h4>

        <p>Profile Information:</p>
        <p>{{user.firstname}} {{user.lastname}}</p>
        <p>{{user.email}}</p>
    </div>
        <div class="row photoRows">
            <a href="/users-edit">
